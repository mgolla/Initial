@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;
@{
    Layout = null;
}

@Styles.Render("~/bundles/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<style>
    #CaptchaInputText {
        height: 40px;
        width: 200px;
        font-size: 25px;
    }

    .mini_text_cpt {
        color: #f00;
        font-size: 14px;
        font-weight: bold;
    }
</style>

@using (@Html.BeginForm("CaptchaPost", "Main", FormMethod.Post, new { @autocomplete = "off" }))
{
    <div class="container-fluid pull-left">
        <!-- Main component for a primary marketing message or call to action -->
        <div class="content_wrapper Mob_margZero martop100">
            <!-- bs-example-navbar-collapse-1 -->
            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-lg-8 col-md-8 col-sm-8 col-xs-12 Mob_padZero">
                <h1 class="authtitle">
                    iPRISM Authentication
                </h1>
            </div>
            <div class="row userAunthent">
                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-lg-8 col-md-8 col-sm-8 col-xs-11 mob-marLef15">
                    <div class="panel panel-default">
                        <div class="panel-body" style="min-height:300px;">
                            <div class="col-lg-12 col-md-12 col-sm-12 martop20">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="row martop10">
                                            <div class=" form-group col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                @Html.Captcha("Refresh", "Enter the text from image above", 5)
                                                <label for="ex1" class="mini_text_cpt">@ViewBag.ErrMessage</label>
                                            </div>
                                        </div>
                                        
                                        <div class="row ReadRow">
                                            <div class="form-group col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                <label class="control-label col-lg-2 col-md-3 col-sm-3" style="text-align: left; padding-left: 0px;">
                                                    Pin
                                                </label>
                                                @Html.Password("userPin", "", new { @maxlength = "8", @autocomplete = "off", @style = "padding-right: 32px; height: 41px;font-size: 25px;width: 200px;" })
                                            </div>
                                        </div>
                                        <div class="row ReadRow">
                                            <div class="form-group col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                <input type="submit" value="Submit" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

<script>
    $(document).ready(function () {
        document.getElementById('CaptchaInputText').value = ' ';
        document.getElementById('CaptchaInputText').setAttribute("autocomplete", "off");

        document.getElementById('userPin').value = '';
        document.getElementById('userPin').setAttribute("autocomplete", "off");
       
    });


</script>